\def\underborder #1 font #2 char #3 [#4] {%
    \RandBox {#1} font {#2} [#4]
             () ([]) ()
             ([]) ([])
             (#3) ([#3]) (#3) }

\def\leftborder #1 font #2 char #3 [#4] {%
    \RandBox {#1} font {#2} [#4]
             (#3) ([]) ()
             ([#3]) ([])
             (#3) ([]) () }

\def\rightborder #1 font #2 char #3 [#4] {%
    \RandBox {#1} font {#2} [#4]
             () ([]) (#3)
             ([]) ([#3])
             () ([]) (#3) }

\def\overborder #1 font #2 char #3 [#4] {%
    \RandBox {#1} font {#2} [#4]
             (#3) ([#3]) (#3)
             ([]) ([])
             () ([]) () }

